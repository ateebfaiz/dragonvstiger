<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <WebView android:id="@+id/chat_window_web_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ProgressBar android:layout_gravity="center" android:id="@+id/chat_window_progress" android:layout_width="40dp" android:layout_height="40dp" android:indeterminate="true"/>
    <WebView android:id="@+id/chat_window_web_view_popup" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/chat_window_status_container" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:id="@+id/chat_window_status_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/failed_to_load_chat"/>
        <Button android:id="@+id/chat_window_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/reload_chat"/>
    </LinearLayout>
</merge>
