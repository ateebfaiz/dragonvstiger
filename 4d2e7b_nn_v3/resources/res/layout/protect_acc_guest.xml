<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/gateway_root" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <com.zing.zalo.zalosdk.payment.direct.DynamicLayout android:background="#50000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <LinearLayout android:orientation="vertical" android:background="@drawable/zalosdk_border_rectangle_no_corner_partial_transparent_31_percent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="#ffffffff" android:gravity="center_horizontal" android:id="@+id/title" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Bảo vệ tài khoản" android:textAlignment="center"/>
            <View android:id="@+id/header_line" android:background="#ff2196f3" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginBottom="10dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:id="@+id/form_id_container" android:background="@drawable/zalosdk_white_border_rectangle_corner_partial_transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
                    <RelativeLayout android:id="@+id/form_email_container" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:layout_width="17dp" android:layout_height="17dp" android:layout_marginLeft="13dp" android:layout_marginTop="8dp" android:layout_marginRight="13dp" android:layout_marginBottom="8dp" android:src="@drawable/ic_email" android:scaleType="fitCenter" android:layout_centerVertical="true"/>
                        <EditText android:textSize="14dp" android:textColor="#ffbdbdbd" android:id="@+id/email_guard" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:hint="Nhập email" android:layout_centerVertical="true" android:inputType="textWebEmailAddress" android:imeOptions="actionUnspecified|actionNone|actionSend|actionNext|flagNoExtractUi" android:textCursorDrawable="@null"/>
                    </RelativeLayout>
                    <View android:id="@+id/form_devider" android:background="#ffd1d1d3" android:layout_width="match_parent" android:layout_height="2dp"/>
                    <RelativeLayout android:id="@+id/form_pass_container" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <ImageView android:layout_width="17dp" android:layout_height="17dp" android:layout_marginLeft="13dp" android:layout_marginTop="8dp" android:layout_marginRight="13dp" android:layout_marginBottom="8dp" android:src="@drawable/ic_lock" android:scaleType="fitCenter" android:layout_centerVertical="true"/>
                        <EditText android:textSize="14dp" android:textColor="#ffffffff" android:id="@+id/emailPass" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:hint="Nhập mật khẩu" android:layout_centerVertical="true" android:inputType="textPassword" android:imeOptions="actionUnspecified|actionGo|flagNoExtractUi" android:textCursorDrawable="@null"/>
                    </RelativeLayout>
                </LinearLayout>
                <TextView android:textSize="12dp" android:textColor="#ffffffff" android:id="@+id/title_sent_email_confirm" android:paddingTop="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:text="@string/title_sent_email_confirm" android:layout_below="@+id/form_id_container"/>
                <Button android:textSize="15dp" android:textStyle="bold" android:textColor="#ffffffff" android:id="@+id/submit_email_guard" android:background="@drawable/zalosdk_zing" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:text="Đồng ý" android:layout_below="@+id/title_sent_email_confirm"/>
                <TextView android:textSize="14dp" android:textColor="#ffffffff" android:layout_gravity="center_horizontal" android:id="@+id/tt_continue_login" android:background="#70000000" android:paddingLeft="8dp" android:paddingTop="5dp" android:paddingRight="8dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="185dp" android:text="@string/tt_continue_login" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </com.zing.zalo.zalosdk.payment.direct.DynamicLayout>
</RelativeLayout>
