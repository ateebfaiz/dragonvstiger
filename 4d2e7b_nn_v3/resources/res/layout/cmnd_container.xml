<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/cmnd_input_container" android:background="@drawable/zalosdk_white_border_rectangle_corner_partial_transparent" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
        <ImageView android:layout_width="17dp" android:layout_height="17dp" android:layout_marginLeft="13dp" android:layout_marginTop="8dp" android:layout_marginRight="13dp" android:layout_marginBottom="8dp" android:src="@drawable/ic_id" android:scaleType="fitCenter" android:layout_centerVertical="true"/>
        <EditText android:textSize="14dp" android:textColor="#ffbdbdbd" android:id="@+id/cmnd_number" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:hint="Nhập số CMND" android:singleLine="true" android:maxLength="15" android:layout_centerVertical="true" android:inputType="number" android:imeOptions="actionUnspecified|actionNone|actionSend|actionNext|flagNoExtractUi" android:textCursorDrawable="@null"/>
    </RelativeLayout>
    <Button android:textSize="15dp" android:textColor="#ffffffff" android:id="@+id/submit_cmnd_number" android:background="@drawable/zalosdk_zing" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" android:text="Đồng ý" android:layout_below="@+id/cmnd_input_container"/>
    <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/back_form_cmnd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/login_form_margin_top_back_button" android:layout_marginBottom="@dimen/login_form_margin_bottom_back_button" android:layout_centerHorizontal="true">
        <TextView android:textSize="14dp" android:textColor="#ffffffff" android:id="@+id/tt_back_form_cmnd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="Quay về trước" android:layout_centerVertical="true"/>
        <ImageView android:layout_width="10dp" android:layout_height="10dp" android:src="@drawable/ic_arrow" android:scaleType="fitCenter" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
